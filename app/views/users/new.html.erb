  <div class="div-center-parent">
    <div class="div-center-items">

      <%= form_for(@user, class: "form-signin div-center") do |f| %>
        <%= render 'shared/error_messages'%>
        <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
        <%= f.label :name, :class => 'sr-only' %>
        <%= f.text_field :name, class: "form-control", placeholder:"Name" %><br/>
        <%= f.label :user_name, :class => 'sr-only' %>
        <%= f.text_field :user_name, class: "form-control", placeholder:"User name" %><br/>
        <%= f.label :password, :class => 'sr-only' %>
        <%= f.password_field :password, class: "form-control", placeholder:"Password" %>
        <br/>
        <%= f.label :password_confirmation, :class => 'sr-only' %>
        <%= f.text_field :password_confirmation, class: "form-control", placeholder:"Password confirmation" %><br/>
        <%= f.submit "Sign up",class: "btn btn-lg btn-primary btn-block" %>

        <p class="mt-5 mb-3 text-muted">Already have an account?<%= link_to " Log in here", login_path %>.</p>
      <% end %>
    </div>
  </div>
