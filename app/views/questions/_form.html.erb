<div class="form-style">
<%= form_for @question, url: course_questions_path(@question.course_id) do |f| %>
  <%= f.text_field :title, size: "120", class: "form-control", placeholder:"Add your question" %><br/>
  <%= f.text_area :content, cols: "120", rows: "30", class: "form-control", placeholder:"What are you having trouble with? Explain." %><br/>
  <%= f.submit class: "btn btn-default stat-item btn-warning" %>
<% end %>
</div>
