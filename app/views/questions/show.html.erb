<%= render partial:"navigator" %>

<h2><%= @question.title %></h2>
<span style="white-space: pre-line"><%= @question.content %></span>
<h4>Create by:<%= @question.user.user_name %> <%= @question.created_at %></h4>
<% @question.comments.each do |comment| %>
</br>
<span style="white-space: pre-line"><%= comment.content %></span>
<h4>Poster: <%= comment.user.user_name %> <%= comment.created_at %></h4>
<% end %>


<h3>You can comment here:</h3>
<%= form_for @comment, url:question_comments_path do |f| %>
  <%= f.submit %><br/>
  <%= f.text_area :content,  cols: "120", rows: "20" %>

<% end %>
